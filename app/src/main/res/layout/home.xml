<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_layout"
    tools:context=".home">

    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/smart_home_logo" />

    <TextView
        android:id="@+id/home_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="welcome to your Smart Home application "
        android:textColor="@color/material_dynamic_neutral10"

        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/homeb1"
        android:layout_below="@id/home_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:weightSum="2">
    <ImageView
        android:id="@+id/logohome1"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_baseline_admin_panel_settings_24" />
    <Button
        android:id="@+id/gererButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logohome1"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="32dp"
        android:text="GERER COMPTE"
        android:textSize="18sp"
        android:backgroundTint="@color/purple_700"
        android:textColor="@android:color/white"
        android:padding="12dp"
        android:stateListAnimator="@null"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/homeb2"
        android:layout_below="@id/homeb1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:weightSum="2">
    <ImageView
        android:id="@+id/logohome2"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_baseline_security_24" />
    <Button
        android:id="@+id/secureButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logohome2"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="32dp"
        android:text=" GERER SECURITE"
        android:textSize="18sp"
        android:backgroundTint="@color/purple_700"
        android:textColor="@android:color/white"
        android:padding="12dp"
        android:stateListAnimator="@null"/>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/homeb3"
        android:layout_below="@id/homeb2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:weightSum="2">
    <ImageView
        android:id="@+id/logohome3"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_baseline_airline_seat_flat_24" />
    <Button
        android:id="@+id/survButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logohome3"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="32dp"
        android:text=" GERER SURVAILLANCE"
        android:textSize="18sp"
        android:backgroundTint="@color/purple_700"
        android:textColor="@android:color/white"
        android:padding="12dp"
        android:stateListAnimator="@null"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/homeb4"
        android:layout_below="@id/homeb3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:weightSum="2">
    <ImageView
        android:id="@+id/logohome4"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_baseline_login_24" />
    <Button
        android:id="@+id/deconnecterButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logohome4"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="32dp"
        android:text=" deconnecter "
        android:textSize="18sp"
        android:backgroundTint="@color/purple_700"
        android:textColor="@android:color/white"
        android:padding="12dp"
        android:stateListAnimator="@null"/>
    </LinearLayout>

</RelativeLayout>